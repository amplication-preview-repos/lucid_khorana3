datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model CharacterSheet {
  assignedUser String?
  createdAt    DateTime @default(now())
  id           String   @id @default(cuid())
  name         String?
  updatedAt    DateTime @updatedAt
}

model Room {
  combatGrids CombatGrid[]
  createdAt   DateTime     @default(now())
  gm          String?
  id          String       @id @default(cuid())
  name        String?
  updatedAt   DateTime     @updatedAt
}

model CombatGrid {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  room      Room?    @relation(fields: [roomId], references: [id])
  roomId    String?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
